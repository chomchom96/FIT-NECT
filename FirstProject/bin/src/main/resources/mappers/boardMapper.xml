	<!-- 이하 생략 -->

	<select id="search" resultMap="boardMap" resultType="Board" parameterType="SearchCondition">
    	SELECT *
    	FROM board
    <if test="key != 'none'">
        WHERE
        <choose>
            <when test="key == 'boardId'">
                board_id
            </when>
            <when test="key == 'userId'">
                board_user_id
            </when>
            <when test="key == 'boardTitle'">
                board_title
            </when>
            <when test="key == 'boardContent'">
                board_content
            </when>
            <otherwise>
                ${key}
            </otherwise>
        </choose>
        LIKE concat('%', #{word}, '%');
    </if>
    <if test="orderBy != 'none'">
        ORDER BY 
        <choose>
            <when test="orderBy == 'boardId'">
                board_id
            </when>
            <when test="orderBy == 'userId'">
                board_user_id
            </when>
            <when test="orderBy == 'boardTitle'">
                board_title
            </when>
            <when test="orderBy == 'boardViewCnt'">
                board_view_cnt
            </when>
            <otherwise>
                ${orderBy}
            </otherwise>
        </choose>
        ${orderByDir};
    </if>
</select>

<!-- 이하 생략 -->
	
	
	<select id="selectOne" resultMap="boardMap" parameterType="Board">
        SELECT *
        FROM board
        WHERE board_id = #{boardId};
    </select>
    
    <update id="updateViewCnt" parameterType="int">
    	UPDATE board
    	SET board_view_cnt = board_view_cnt + 1
    	WHERE board_id = #{boardId};
    </update>

	<insert id="insertBoard" parameterType="Board" keyProperty="boardId" useGeneratedKeys="true">
		INSERT INTO board (board_title, board_user_id, board_content, board_file )
		VALUES (#{boardTitle}, #{userId}, #{boardContent}, #{boardFile});
	</insert>
	
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM board
		WHERE board_id = #{boardId};
	</delete>
	
	<update id="updateBoard" parameterType="Board">
		UPDATE board
		SET board_title = #{boardTitle}, board_content = #{boardContent}
		WHERE board_id = #{boardId};
	</update>
	

</mapper>